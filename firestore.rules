rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and write only their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Lesson Plans: only teachers can read and write
    match /lessonPlans/{docId} {
      allow read, write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "teacher";
    }

    // Resources: both teachers and students can read, only teachers can write
    match /resources/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "teacher";
    }

    // Student Queries: both teachers and students can read and write
    match /studentQueries/{docId} {
      allow read, write: if request.auth != null;
    }

    // Question Banks: both teachers and students can read, only teachers can write
    match /questionBanks/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "teacher";
    }

    // Model Question Papers: both teachers and students can read, only teachers can write
    match /modelQuestionPapers/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "teacher";
    }

    // Notes: both teachers and students can read, only teachers can write
    match /notes/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "teacher";
    }
  }
}
